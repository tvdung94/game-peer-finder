<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.org.dungtranvu.local_gaming_peers_finder.showFeedDetails"
    android:id="@+id/h">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_showFeedDetails_Username"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_showFeedDetails_Content"
        android:layout_below="@+id/textView_showFeedDetails_Username"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_showFeedDetails_Specs"
        android:layout_below="@+id/textView_showFeedDetails_Content"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:id="@+id/listView_showFeedDetails_replies"
        android:layout_below="@+id/textView_showFeedDetails_Specs"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_showFeedDetails_reply"
        android:layout_below="@+id/listView_showFeedDetails_replies"
        android:layout_alignParentStart="true"
        android:text="Comment..."
        android:layout_toStartOf="@+id/fab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Send"
        android:clickable="true"
        android:id="@+id/textView_showFeedDetails_send"
        android:layout_alignBottom="@+id/editText_showFeedDetails_reply"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
